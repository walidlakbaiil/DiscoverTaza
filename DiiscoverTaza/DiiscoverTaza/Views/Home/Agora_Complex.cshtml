    <script>

      
        $(document).ready(function () {
            // Intercepter le clic sur le bouton "Envoyer maintenant"
            $("#submit").click(function () {
                // Valider le formulaire
                if ($("#myForm").valid()) {
                    // Sérialiser les données du formulaire
                    const formData = {
                        name: $('#name').val(),
                        phone: $('#phone').val(),
                        subject: $('#subject').val(),
                        question: $('#question').val(),
                    };

                    //var formData = $("#myForm").serialize();

                    // Envoyer les données via AJAX
                    $.ajax({
                        url: '@Url.Action("SaveFormData", "FormulaireDatums")', // Remplacez ceci par votre URL côté serveur
                        type: 'POST',
                        data: JSON.stringify(formData),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",

                    })
                        .done(function (response) {
                            // Si la requête est réussie, afficher le message de succès
                            alert("Form submitted successfully!");
                            // Réinitialiser le formulaire après une soumission réussie (optionnel)
                            $("#myForm")[0].reset();
                        })
                        .fail(function (xhr, status, error) {
                            // Si la requête échoue, afficher le message d'erreur
                            alert("An error occurred while saving the data");
                        });
                }
            });

            // Règles de validation du formulaire
            $("#myForm").validate({
                // Vos règles de validation ici...
                rules: {
                    name: {
                        required: true,
                        maxlength: 50 // Limit name to 50 characters maximum

                    },
                    phone: {
                        required: true,
                        minlength: 10, // Phone number must have at least 10 digits
                        maxlength: 15 // Limit phone number to 15 digits maximum
                    },
                    subject: {
                        required: true,
                        maxlength: 100,// Limit subject to 100 characters maximum
                        minlength: 5,
                    },
                    question: {
                        required: true,
                        maxlength: 500, // Limit question to 500 characters maximum
                        minlength: 15,
                    }
                },
                messages: {
                    name: {
                        required: " Please enter your name.",
                        maxlength: "The name must not exceed {0} characters."
                    },
                    phone: {
                        required: "Please enter your phone number.",
                        minlength: "The phone number must have at least {0} digits.",
                        maxlength: "The phone number must not exceed {0} digits."
                    },
                    subject: {
                        required: "Please enter the subject.",
                        maxlength: "The subject must not exceed {0} characters."
                    },
                    question: {
                        required: "Please write your question.",
                        maxlength: "The question must not exceed {0} characters."
                    }
                },
            });
        });

    </script>
